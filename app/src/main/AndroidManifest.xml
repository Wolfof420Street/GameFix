<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wolf.gamefix">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/intro1"
        android:label="@string/app_name"
        android:roundIcon="@drawable/intro1"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.LeagueDetailActivity"></activity>
        <activity android:name=".ui.InfoActivity" />
        <activity android:name=".ui.ResultsActivity" />
        <activity android:name=".ui.FixturesListActivity" />
        <activity android:name=".ui.LeaguesListActivity" />
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.MyIntro"
            android:theme="@style/FullscreenTheme" />
    </application>

</manifest>